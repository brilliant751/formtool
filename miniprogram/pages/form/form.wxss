/* pages/form.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
}

.form-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 35rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-right: 5rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1890ff;
  background-color: #fff;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #999;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.radio-item radio {
  margin-right: 10rpx;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
}

.checkbox-item checkbox {
  margin-right: 10rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #1890ff;
  background-color: #fff;
}

.button-group {
  margin-top: 50rpx;
  display: flex;
  gap: 20rpx;
}

.submit-btn {
  flex: 1;
  height: 90rpx;
  line-height: 60rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.reset-btn {
  flex: 1;
  height: 90rpx;
  line-height: 60rpx;
  background-color: #fff;
  color: #666;
  border: 1rpx solid #e0e0e0;
  border-radius: 45rpx;
  font-size: 32rpx;
}